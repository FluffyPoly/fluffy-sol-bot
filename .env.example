# Solana Trading Bot Environment Configuration
# Copy this to .env and fill in your values

# Solana RPC Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# For faster/better RPC, consider:
# - Helius: https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
# - QuickNode: https://YOUR_ENDPOINT.quiknode.pro/TOKEN

# Wallet Configuration
WALLET_PATH=./config/wallet.json

# Trading Configuration
MAX_POSITION_SIZE_USDC=50
MAX_SIMULTANEOUS_POSITIONS=3
STOP_LOSS_PERCENT=-15
TAKE_PROFIT_PERCENT=30
PORTFOLIO_STOP_LOSS_USDC=150
STARTING_CAPITAL_USDC=300

# Market Scanning Filters
MIN_LIQUIDITY_USD=1000000
MIN_TOKEN_AGE_HOURS=24
SCAN_INTERVAL_SECONDS=15
POSITION_CHECK_INTERVAL_SECONDS=10

# Jupiter API
JUPITER_API_URL=https://quote-api.jup.ag/v6

# Telegram Alerts (optional but recommended)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/bot.log
HEARTBEAT_INTERVAL_MINUTES=5
